<!DOCTYPE html>
<html lang="pt-br">
  <%- include('partials/head.ejs') %>
  <body>
    <h1><%= title %></h1>

    <%- include('partials/navbar.ejs') %>

    <% if(typeof message !== 'undefined') { %>
      <%= message %>
    <% } %>

    <form action="/edit/<%= user._id %>" method="POST">
      <div>
        <label>Nome</label>
        <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name %>" />
      </div>
      <label>Idade</label>
        <input type="text" name="age" placeholder="Digite a sua idade" value="<%= user.age %>" />
      </div>
      <label>E-mail</label>
        <input type="text" name="email" placeholder="Digite o seu e-mail" value="<%= user.email %>" />

      <button
      type="submit">Editar</button>
    </form>

    <%- include('partials/foot.ejs') %>

  </body>
</html>
